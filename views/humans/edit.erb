<h2>Edit <%= @human.format_name %></h2>
<form method="POST" action="/humans/<%= @human.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" id="first_name" value="<%= @human.first_name %>"/>
    </div>

    <div class="form-el">
      <label for="surname">Surname:</label>
      <input type="text" name="surname" id="surname" value="<%= @human.surname %>"/>
    </div>

    <div class="form-el">
      <label for="age">First Name:</label>
      <input type="number" name="age" id="age" value="<%= @human.age %>"/>
    </div>

  </div>

</form>
